<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitleLocation"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPaddingTop="10dp"
        card_view:contentPaddingBottom="3dp"
        card_view:cardElevation="10dp"
        android:layout_below="@id/txtTitleLocation"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/cardRelative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewCaption"
                android:gravity="left"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:id="@+id/imgPlay"
                android:contentDescription="@string/fireImage"
                android:layout_width="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="false"
                android:src="@drawable/ic_play_circle_outline_white_24dp"
                android:layout_height="80dp" />

            <ImageView
                android:id="@+id/imgCaptured"
                android:contentDescription="@string/fireImage"
                android:layout_below="@+id/textViewCaption"
                android:layout_marginBottom="5dp"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <Button
                android:id="@+id/shareButton"
                android:drawableStart="@drawable/ic_share_black_24dp"
                android:background="@android:color/transparent"
                android:textColor="#bcbcbc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/imgCaptured"
                android:layout_marginTop="5dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>